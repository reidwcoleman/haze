                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                    </svg>
                </a>
                <a href="#">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                </a>
                <a href="#">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
                    </svg>
                </a>
            </div>
        </div>
    </footer>

    <!-- Cart Drawer -->
    <div class="cart-drawer" id="cartDrawer">
        <div class="cart-header">
            <h3 class="cart-title">YOUR CART</h3>
            <button class="cart-close" onclick="toggleCart()">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 6L6 18M6 6l12 12"/>
                </svg>
            </button>
        </div>
        <div class="cart-items" id="cartItems">
            <div class="cart-empty">
                <div class="cart-empty-icon">🛒</div>
                <p>Your cart is empty</p>
            </div>
        </div>
        <div class="cart-footer" id="cartFooter" style="display: none;">
            <div class="cart-subtotal">
                <span>Subtotal</span>
                <span id="cartSubtotal">$0.00</span>
            </div>
            <div class="cart-subtotal">
                <span>Shipping</span>
                <span id="cartShipping">Calculated at checkout</span>
            </div>
            <div class="cart-total">
                <span>Total</span>
                <span id="cartTotal">$0.00</span>
            </div>
            <button class="checkout-btn" onclick="checkout()">CHECKOUT</button>
            <button class="continue-shopping" onclick="toggleCart()">CONTINUE SHOPPING</button>
        </div>
    </div>

    <!-- Size Guide Modal -->
    <div class="modal" id="sizeGuideModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Size Guide</h3>
                <button class="modal-close" onclick="closeSizeGuide()">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 6L6 18M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <table class="size-table">
                    <thead>
                        <tr>
                            <th>SIZE</th>
                            <th>CHEST (in)</th>
                            <th>LENGTH (in)</th>
                            <th>SLEEVE (in)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>XS</td>
                            <td>36-38</td>
                            <td>26</td>
                            <td>32</td>
                        </tr>
                        <tr>
                            <td>S</td>
                            <td>38-40</td>
                            <td>27</td>
                            <td>33</td>
                        </tr>
                        <tr>
                            <td>M</td>
                            <td>40-42</td>
                            <td>28</td>
                            <td>34</td>
                        </tr>
                        <tr>
                            <td>L</td>
                            <td>42-44</td>
                            <td>29</td>
                            <td>35</td>
                        </tr>
                        <tr>
                            <td>XL</td>
                            <td>44-46</td>
                            <td>30</td>
                            <td>36</td>
                        </tr>
                        <tr>
                            <td>XXL</td>
                            <td>46-48</td>
                            <td>31</td>
                            <td>37</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Toast -->
    <div class="toast" id="toast"></div>

    <script>
        // State
        let cart = JSON.parse(localStorage.getItem('hazeCart')) || [];
        let selectedColor = 'Cream';
        let selectedSize = null;
        let currentImageIndex = 0;

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            updateCartUI();
            
            // Navbar scroll effect
            window.addEventListener('scroll', () => {
                const navbar = document.getElementById('navbar');
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });

            // Smooth scroll for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                });
            });
        });

        // Navigation
        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function scrollToShop() {
            document.getElementById('shop').scrollIntoView({ behavior: 'smooth' });
        }

        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            const overlay = document.getElementById('overlay');
            menu.classList.toggle('open');
            overlay.classList.toggle('visible');
            document.body.classList.toggle('no-scroll');
        }

        function closeAll() {
            document.getElementById('mobileMenu').classList.remove('open');
            document.getElementById('cartDrawer').classList.remove('open');
            document.getElementById('overlay').classList.remove('visible');
            document.body.classList.remove('no-scroll');
        }

        // Product Gallery
        function setImage(index) {
            currentImageIndex = index;
            document.querySelectorAll('.thumbnail').forEach((thumb, i) => {
                thumb.classList.toggle('active', i === index);
            });
            // In a real app, you'd change the main image source here
        }

        function prevImage() {
            currentImageIndex = (currentImageIndex - 1 + 3) % 3;
            setImage(currentImageIndex);
        }

        function nextImage() {
            currentImageIndex = (currentImageIndex + 1) % 3;
            setImage(currentImageIndex);
        }

        // Product Options
        function selectColor(btn) {
            document.querySelectorAll('.color-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            selectedColor = btn.dataset.color;
            document.getElementById('colorName').textContent = selectedColor;
        }

        function selectSize(btn) {
            if (btn.disabled) return;
            document.querySelectorAll('.size-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            selectedSize = btn.dataset.size;
            document.getElementById('sizeName').textContent = selectedSize;
            
            const addBtn = document.getElementById('addToCartBtn');
            const buyBtn = document.getElementById('buyNowBtn');
            addBtn.disabled = false;
            addBtn.textContent = 'ADD TO CART';
            buyBtn.disabled = false;
        }

        // Quantity
        function incrementQty() {
            const input = document.getElementById('qtyInput');
            if (parseInt(input.value) < 10) {
                input.value = parseInt(input.value) + 1;
            }
        }

        function decrementQty() {
            const input = document.getElementById('qtyInput');
            if (parseInt(input.value) > 1) {
                input.value = parseInt(input.value) - 1;
            }
        }

        // Cart
        function toggleCart() {
            const drawer = document.getElementById('cartDrawer');
            const overlay = document.getElementById('overlay');
            drawer.classList.toggle('open');
            overlay.classList.toggle('visible');
            document.body.classList.toggle('no-scroll');
        }

        function addToCart() {
            if (!selectedSize) {
                showToast('Please select a size');
                return;
            }

            const qty = parseInt(document.getElementById('qtyInput').value);
            const item = {
                id: Date.now(),
                name: 'HAZE Crewneck',
                color: selectedColor,
                size: selectedSize,
                price: 120,
                qty: qty,
                image: 'haze-product.png'
            };

            // Check if item already exists
            const existingIndex = cart.findIndex(i => 
                i.name === item.name && i.color === item.color && i.size === item.size
            );

            if (existingIndex > -1) {
                cart[existingIndex].qty += qty;
            } else {
                cart.push(item);
            }

            saveCart();
            updateCartUI();

            // Button feedback
            const btn = document.getElementById('addToCartBtn');
            btn.classList.add('added');
            btn.textContent = 'ADDED ✓';
            setTimeout(() => {
                btn.classList.remove('added');
                btn.textContent = 'ADD TO CART';
            }, 2000);

            showToast('Added to cart');
            
            // Open cart
            toggleCart();
        }

        function buyNow() {
            if (!selectedSize) {
                showToast('Please select a size');
                return;
            }

            const qty = parseInt(document.getElementById('qtyInput').value);
            const item = {
                id: Date.now(),
                name: 'HAZE Crewneck',
                color: selectedColor,
                size: selectedSize,
                price: 120,
                qty: qty,
                image: 'haze-product.png'
            };

            // Clear cart and add only this item
            cart = [item];
            saveCart();
            updateCartUI();

            showToast('Redirecting to checkout...');
            
            // In a real app, redirect to checkout
            setTimeout(() => {
                alert('Checkout page would open here.\n\nOrder Summary:\n' + 
                    `${item.name}\n${item.color} / ${item.size}\nQty: ${item.qty}\nTotal: $${(item.price * item.qty).toFixed(2)}`);
            }, 500);
        }

        function removeFromCart(id) {
            cart = cart.filter(item => item.id !== id);
            saveCart();
            updateCartUI();
        }

        function updateItemQty(id, change) {
            const item = cart.find(i => i.id === id);
            if (item) {
                item.qty += change;
                if (item.qty < 1) {
                    removeFromCart(id);
                } else {
                    saveCart();
                    updateCartUI();
                }
            }
        }

        function saveCart() {
            localStorage.setItem('hazeCart', JSON.stringify(cart));
        }

        function updateCartUI() {
            const cartItems = document.getElementById('cartItems');
            const cartFooter = document.getElementById('cartFooter');
            const cartCount = document.getElementById('cartCount');

            const totalItems = cart.reduce((sum, item) => sum + item.qty, 0);
            cartCount.textContent = totalItems;
            cartCount.classList.toggle('visible', totalItems > 0);

            if (cart.length === 0) {
                cartItems.innerHTML = `
                    <div class="cart-empty">
                        <div class="cart-empty-icon">🛒</div>
                        <p>Your cart is empty</p>
                    </div>
                `;
                cartFooter.style.display = 'none';
            } else {
                cartItems.innerHTML = cart.map(item => `
                    <div class="cart-item">
                        <div class="cart-item-image">
                            <img src="${item.image}" alt="${item.name}">
                        </div>
                        <div class="cart-item-details">
                            <p class="cart-item-name">${item.name}</p>
                            <p class="cart-item-variant">${item.color} / ${item.size}</p>
                            <p class="cart-item-price">$${item.price.toFixed(2)}</p>
                            <div class="cart-item-qty">
                                <button class="cart-qty-btn" onclick="updateItemQty(${item.id}, -1)">−</button>
                                <span>${item.qty}</span>
                                <button class="cart-qty-btn" onclick="updateItemQty(${item.id}, 1)">+</button>
                            </div>
                            <button class="cart-item-remove" onclick="removeFromCart(${item.id})">Remove</button>
                        </div>
                    </div>
                `).join('');

                const subtotal = cart.reduce((sum, item) => sum + (item.price * item.qty), 0);
                document.getElementById('cartSubtotal').textContent = `$${subtotal.toFixed(2)}`;
                document.getElementById('cartShipping').textContent = subtotal >= 100 ? 'FREE' : '$10.00';
                const shipping = subtotal >= 100 ? 0 : 10;
                document.getElementById('cartTotal').textContent = `$${(subtotal + shipping).toFixed(2)}`;

                cartFooter.style.display = 'block';
            }
        }

        function checkout() {
            showToast('Redirecting to checkout...');
            // In a real app, redirect to checkout page
        }

        // Wishlist
        function toggleWishlist(btn) {
            btn.classList.toggle('active');
            if (btn.classList.contains('active')) {
                showToast('Added to wishlist');
            } else {
                showToast('Removed from wishlist');
            }
        }

        // Tabs
        function switchTab(index) {
            document.querySelectorAll('.tab-header').forEach((header, i) => {
                header.classList.toggle('active', i === index);
            });
            document.querySelectorAll('.tab-panel').forEach((panel, i) => {
                panel.classList.toggle('active', i === index);
            });
        }

        // Size Guide
        function openSizeGuide() {
            document.getElementById('sizeGuideModal').classList.add('open');
            document.body.classList.add('no-scroll');
        }

        function closeSizeGuide() {
            document.getElementById('sizeGuideModal').classList.remove('open');
            document.body.classList.remove('no-scroll');
        }

        // Close modal on outside click
        document.getElementById('sizeGuideModal').addEventListener('click', (e) => {
            if (e.target === document.getElementById('sizeGuideModal')) {
                closeSizeGuide();
            }
        });

        // Newsletter
        function handleNewsletter(e) {
            e.preventDefault();
            const form = document.getElementById('newsletterForm');
            const success = document.getElementById('newsletterSuccess');
            form.style.display = 'none';
            success.classList.add('show');
        }

        // Toast
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
    </script>
</body>
</html>
